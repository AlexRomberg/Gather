<?xml version='1.0' encoding='utf-8'?>
<widget id="ch.arostudios.gather" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Gather</name>
    <description>
        An app to vote for a place to eat lunch.
    </description>
    <icon src="www/img/logo.png" />
    <author email="alexander.romberg@stud.kftg.ch">
        Alexander Romberg, Noah Scherrer
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
